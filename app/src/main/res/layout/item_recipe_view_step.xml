<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemViewModel"
            type="com.kremnev8.electroniccookbook.recipeview.itemviewmodel.RecipeViewStepItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp">


        <TextView
            android:id="@+id/stepName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:autofillHints=""
            android:gravity="center|start"
            android:hint="@string/stepNameHint"
            android:text="@={itemViewModel.step.step.name}"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox2"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/mediaFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stepName">


            <ImageView
                android:id="@+id/imageMedia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/stepImageDesc"
                app:srcCompat="@drawable/empty_placeholder"
                app:switchRoundedImage="@{itemViewModel.step.step.mediaUri}"
                tools:ignore="ImageContrastCheck" />

            <VideoView
                android:id="@+id/videoMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:switchRoundedVideo="@{itemViewModel.step.step.mediaUri}" />
        </FrameLayout>

        <include
            layout="@layout/element_timer"
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:showTimer="@{itemViewModel.step.step.timerEnabled}"
            app:layout_constraintEnd_toEndOf="@+id/mediaFrame"
            app:layout_constraintStart_toStartOf="@+id/mediaFrame"
            app:layout_constraintTop_toBottomOf="@+id/mediaFrame" />

        <TextView
            android:id="@+id/stepDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:gravity="top|start"
            android:minHeight="50dp"
            android:scrollbars="vertical"
            android:text="@={itemViewModel.step.step.description}"
            android:textColorHint="#757575"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{`#` + itemViewModel.step.step.stepNumber}"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/stepName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/stepName" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="-1dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:checked="@={itemViewModel.complete}"
            android:button="@drawable/checkbox_selector"
            android:buttonTint="@color/white"
            android:buttonTintMode="multiply"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>